<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/editUser.css" />
    <!-- Ensure the correct path -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <title>Edit User</title>
  </head>
  <body class="poppins-thin">
    <nav>
      <img src="/logo.png" alt="" />
      <!-- Ensure the correct path -->
      <h1>HU PR PORTAL</h1>
      <div class="dropdown">
        <span class="account-icon" onclick="toggleDropdown()"><i
            class="fa-regular fa-user"
          ></i></span>
        <div class="dropdown-content" id="dropdownContent">
          <a href="/userDashboard">Dashboard</a>
          <a href="/auth/logout">Logout</a>
        </div>
      </div>
    </nav>
    <h1 id="addmember">Edit Staff Member Data</h1>
    <div class="list-user-delete-user-container">
      <div class="list-users">
        <h4>List of users</h4>
        <table class="user-table">
          <thead>
            <tr>
              <th>Username</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Position</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
              <tr>
                <td class="user-username">{{this.username}}</td>
                <td class="user-firstname">{{this.firstName}}</td>
                <td class="user-lastname">{{this.lastName}}</td>
                <td class="user-email">{{this.email}}</td>
                <td class="user-position">{{this.position}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <div class="container">
        <div class="sign-up">
          <form action="/auth/editUser" method="POST">
            {{#if message}}
              <h3 style="color: red;">{{message}}</h3>
            {{/if}}

            <h3>Enter username of user to edit</h3>
            <div class="form-group">
              <input
                type="text"
                required
                name="username"
                placeholder="username"
                id="username"
              />
            </div>
            <input type="submit" value="Go To Edit ▶️" />
          </form>
        </div>
      </div>
    </div>

    <div>
      {{#if user}}
        <form action="/auth/adminUpdateUser" method="post" id="editUserForm">
          <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
              <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                  <div
                    class="d-flex justify-content-between align-items-center mb-3"
                  >
                    <h4 class="text-right">Profile Settings</h4>
                  </div>
                  <div class="row mt-2">
                    <div class="col-md-6">
                      <label class="labels">First Name</label>
                      <input
                        type="text"
                        class="form-control"
                        name="firstName"
                        value="{{user.firstName}}"
                        placeholder="First Name"
                        required
                      />
                    </div>
                    <div class="col-md-6">
                      <label class="labels">Last Name</label>
                      <input
                        type="text"
                        class="form-control"
                        name="lastName"
                        value="{{user.lastName}}"
                        placeholder="Last Name"
                        required
                      />
                    </div>
                  </div>
                  <div class="row mt-3">
                    <div class="col-md-12">
                      <label class="labels">Username</label>
                      <input
                        type="text"
                        class="form-control"
                        name="username"
                        value="{{user.username}}"
                        placeholder="Username"
                        readonly
                        required
                      />
                    </div>
                    <div class="col-md-12">
                      <label class="labels">Password</label>
                      <input
                        type="password"
                        class="form-control"
                        name="password"
                        placeholder="Password"
                        required
                      />
                    </div>
                    <div class="col-md-12">
                      <label class="labels">Position</label>
                      <input
                        type="text"
                        class="form-control"
                        name="position"
                        value="{{user.position}}"
                        placeholder="Position"
                        required
                      />
                    </div>
                    <div class="col-md-12">
                      <label class="labels">Email</label>
                      <input
                        type="email"
                        class="form-control"
                        name="email"
                        value="{{user.email}}"
                        placeholder="Email"
                        required
                      />
                    </div>
                  </div>
                  <div class="mt-5 text-center">
                    <button
                      class="btn btn-secondary profile-button"
                      type="submit"
                    >
                      Save Profile
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      {{/if}}
    </div>
    <script>
      function toggleDropdown() { const dropdownContent =
      document.getElementById('dropdownContent');
      dropdownContent.classList.toggle('show'); }

    </script>
  </body>
</html>