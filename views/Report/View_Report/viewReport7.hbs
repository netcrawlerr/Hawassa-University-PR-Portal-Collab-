<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Report 7</title>
    <link rel="stylesheet" href="/viewReport.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
  </head>
  <body>
    <nav>
      <img src="/logo.png" alt="HU PR PORTAL Logo" />
      <h1>HU PR PORTAL</h1>
      <div class="dropdown">
        <span class="account-icon" onclick="toggleDropdown()"><i
            class="fa-regular fa-user"
          ></i></span>
        <div class="dropdown-content" id="dropdownContent">
          <a href="/userDashboard">Dashboard</a>
          <a href="/auth/logout">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="sidebar">
        <h2>Report Topics</h2>
        <p>Click sidebar buttons to view reports</p>
        <a href="/viewReport1"><button id="report1Btn">Report 1</button></a>
        <a href="/viewReport2"><button>Report 2</button></a>
        <a href="/viewReport3"><button>Report 3</button></a>
        <a href="/viewReport4"><button>Report 4</button></a>
        <a href="/viewReport5"><button>Report 5</button></a>
        <a href="/viewReport6"><button>Report 6</button></a>
        <a href="/viewReport7"><button>Report 7</button></a>
        <a href="/viewReport8"><button>Report 8</button></a>
        <a href="/viewReport9"><button>Report 9</button></a>
      </div>

      <div class="report-details">
        <form id="reportForm" action="/tasks/viewReport" method="POST">
          <input type="hidden" id="goal_id" name="goal_id" value={{goal_id}} />
          <button type="submit" id="showReportsBtn">Show Reports</button>
        </form>

        <div id="reportTopics">
          <div class="report-details">
            <h1 id="reportTitle">Report 7 Details</h1>
            <div id="reportContent">
              {{#if reports}}
                <form
                  id="form-textarea"
                  action="/tasks/editReport"
                  method="post"
                >
                  <input
                    type="hidden"
                    id="goal_id"
                    name="goal_id"
                    value="{{goal_id}}"
                  />
                  <ol>
                    {{#each reports}}
                      <div style="display: flex; align-items: center;">
                        {{! <input type="text " name="hey" /> }}
                        <textarea
                          name="reportTextArea[]"
                          style="flex-grow: 1; margin-right: 10px;"
                        >{{this.report_details}}</textarea>
                        <i
                          class="fas fa-edit"
                          style="color: #FFD43B; font-size: 26px;"
                        ></i>
                      </div>
                    {{/each}}

                  </ol>
                  <input
                    type="submit"
                    value="Submit Edit"
                    style="padding: 5px;"
                  />
                </form>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/viewReport.js"></script>
  </body>
</html>